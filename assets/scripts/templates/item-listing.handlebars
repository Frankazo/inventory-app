<thead>
  <tr>
    <th scope="row">1</th>
    <td><input type="text" name="items[name]" placeholder="Item"></td>
    <td><input type="text" name="items[quantity]" placeholder="Quantity"></td>
    <td><input class="btn btn-outline-info my-2 my-sm-0" type="submit" value="Add"></td>
  </tr>
</thead>
{{#each items as |item|}}
  <tr>
    <th scope="row">2</th>
    <td>{{item.name}}</td>
    <td>{{item.quantity}}</td>
    <td>{{item.id}}</td>
  </tr>
{{/each}}
