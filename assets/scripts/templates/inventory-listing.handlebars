<div class="col mb-4">
  <div class="card text-center h-100">
    <div class="card-body">
      <h5 class="card-title">Blank Inventory</h5>
      <p class="card-text">PlaceHolder</p>
      <form id="create-btn" class="col lg-2">
        <input type="text" name="inventory[reference]" placeholder="Reference">
        <input type="date" name="inventory[date]">
        <input class="btn btn-info create-btn" type="submit" value="Create New">
      </form>
    </div>
  </div>
</div>
{{#each inventories as |inventory|}}
  {{!--{{log book}}--}}
  <div data-id="{{inventory.id}}" class="col mb-4">
    <div class="card text-center h-100">
      <div class="card-header">
          Inventory {{inventory.id}}
      </div>
      <div class="card-body">
        <h5 class="card-title">
           {{#if inventory.reference}}
              {{inventory.reference}}
            {{else}}
              No Reference provided.
            {{/if}}
        </h5>
        <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
        <button data-id="{{inventory.id}}" type="button" name="show" class="btn btn-info show-inv-btn">Check</button>
        <button data-id="{{inventory.id}}" type="button" name="Edit" class="btn btn-outline-info edit-inv-btn">Edit</button>
        <button data-id="{{inventory.id}}" type="button" name="Remove" class="btn btn-info delete-inv-btn">Delete</button>
        </div>
      </div>
      <div class="card-footer text-muted">
        {{#if inventory.date}}
          {{inventory.date}}
        {{else}}
          No Date provided.
        {{/if}}
      </div>
    </div>
  </div>
{{/each}}
