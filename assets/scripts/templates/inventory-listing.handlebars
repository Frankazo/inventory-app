<div class="col mb-4">
  <div class="card text-center h-100">
    <div class="card-body">
      <h5 class="card-title">Create Inventory</h5>
      <form id="create-btn" class="col lg-2">
        <div class="form-group">
        <input type="text" name="inventory[reference]" placeholder="Reference" class="form-control" required="required"> </div>
        <div class="form-group">
        <input type="date" name="inventory[date]" class="form-control" required="required"></div>
        <div class="form-group">
        <input class="btn btn-primary btn-block create-btn" type="submit" value="Create New"></div>
      </form>
    </div>
  </div>
</div>
{{#each inventories as |inventory|}}
  {{!--{{log book}}--}}
  <div data-id="{{inventory.id}}" class="col mb-4">
    <div class="card text-center h-100">
      <div class="card-header">
          Inventory of {{inventory.date}}
      </div>
      <div class="card-body">
        <h5 class="card-title">
           {{#if inventory.reference}}
              {{inventory.reference}}
            {{else}}
              No Reference provided.
            {{/if}}
        </h5>
        <div class="btn-group btn-group-m" role="group" aria-label="Basic example">
        <button data-id="{{inventory.id}}" type="button" name="show" class="btn btn-primary show-inv-btn">Open</button>
        <button data-id="{{inventory.id}}" type="button" name="Edit" class="btn btn-primary edit-inv-btn">Edit</button>
        <button data-id="{{inventory.id}}" type="button" name="Remove" class="btn btn-primary delete-inv-btn">Delete</button>
        </div>
      </div>
    </div>
  </div>
{{/each}}
